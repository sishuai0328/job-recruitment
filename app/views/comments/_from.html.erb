<%= simple_form_for([@group,@post, @post.comments.build]) do |f| %>

<div class="col-md-8 col-md-offset-2" style="border-radius:10px; margin-bottom:50px">
  <h3 class="subtitle is-3" style="text-align:center">发表留言</h3>
  <div class="col-md-12 field">
    <div class="control">
      <%= f.input :comment, :label => false, placeholder: '说点什么吧', input_html:{class: "form-control"} %>
      <!-- <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %> -->
    </div>
  </div>
  <%= f.button :submit, '发表', class: "btn btn-primary col-md-4 col-md-offset-4", style: "margin-bottom:10px" %>
  <% end %>
</div>
