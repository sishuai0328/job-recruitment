<div class="col-md-6 col-md-offset-3 job-resume-box">
  <h3><span class="fa fa-envelope-o"></span> 投递简历</h3>
  <hr>
  <div class="job-info-box">
    <h3><span class="fa fa-tag"></span> <%= @job.title %><span class="company">  / <%= @job.company %></span></h3>
    <p>
      <span class="wage"><%= @job.wage_lower_bound %>  ~ <%= @job.wage_upper_bound %>  </span> /
      <span><span class="fa fa-map-marker"></span> <%= @job.location.name %></span> /
      <span><span class="<%= @job.category.icon %>"> <%= @job.category.name %></span>
     </p>
    <p class="created"><%= @job.created_at.strftime("%Y-%m-%d") %> <span class="website">发布于职赢网</span></p>
  </div>
  <hr />
  <div>
  <%= simple_form_for [@job,@resume] do |f| %>
    <div>
      <%= f.input :content, :label => false, placeholder: '请输入简历描述', input_html: { class: 'resume-content' }  %>
      <%= f.input :attachment, label: '上传简历', input_html: { class: 'resume-attachment' }  %>
    </div>
    <div class="form-actions-resume"style="margin-bottom:50px">
      <%= f.button :submit, '投递', class: "btn btn-primary col-md-2", style: "margin-bottom:50px" %>
    </div>
  <% end %>
  </div>
</div>
