<div class="pull-right">
  <%= link_to("Add a location", new_admin_location_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @locations.each do |location| %>
  <tr>
    <td>
      <%= location.name %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_location_path(location), :class => "btn btn-xs btn-info") %>

      <%= link_to("Destroy", admin_location_path(location), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
  <% end %>
</table>
