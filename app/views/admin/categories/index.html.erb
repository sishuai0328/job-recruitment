<div class="pull-right">
  <%= link_to("新增职位类型", new_admin_category_path, :class => "btn btn-primary" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @categorys.each do |category| %>
  <tr>
    <td>
      <span class="<%= category.icon %>"</span> <%= category.name %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_category_path(category), :class => "btn btn-xs btn-info") %>

      <%= link_to("Destroy", admin_category_path(category), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
  <% end %>
</table>
