<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>count</td>
        <td>postcount</td>
        <td>Creator </td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>

<!--=== 分页区块 ===-->
<div class="col-md-10 col-md-offset-1 job-bottom">
  <div class="text-center">
    <%= will_paginate @groups, renderer: BootstrapPagination::Rails %>
  </div>
</div>
