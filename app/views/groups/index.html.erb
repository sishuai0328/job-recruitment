<div id="groups-list">
<div class="container-fluid groups-list">
  <div class="container">
    <div class="row">
      <div class="group col-md-8 col-md-offset-2">
        <p>
        <h1 class="pull-left" style="margin-top:0px">讨论列表</h1>
        <%= link_to("创建讨论", new_group_path, class: "btn btn-primary pull-right") %>
      </p>
      </div>
    <% @groups.each do |group| %>
    <div class="groups-list col-md-8 col-md-offset-2">
      <div class="media">
      <div class='box1'>
          <a class="pull-left"><%= link_to image_tag(group.avatar.url(:big)), group_path(group), :target => "_blank" %></a>
      </div>


        <div class="media-body">
          <h4 class="media-heading"><%= link_to(group.title, group_path(group)) %></h4>
          <%= render_group_description(group) %>
        </div>
        <div class="icon">
          <a class="heart icon" style="color:orange;font-size:20px;margin-right:10px"> <i class="fa fa-user-circle"></i> <span style="font-size:15px;color:#999"><%= group.group_relationships.count %></span></a>
          <a class="star icon" style="color:orange;font-size:18px;"> <i class="fa fa-file"></i> <span style="font-size:15px;color:#999"><%= group.posts.count %></span></a>
        </div>
      </div>

      </div>




    <% end %>
  </div>
  </div>
</div>
</div>
