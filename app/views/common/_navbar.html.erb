<!-- ===登录弹窗开始=== -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" role="document">
    <div class="loginmodal-container">
       <h2><span class="fa fa-sign-in"></span> 帐号登录</h2>
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="form-inputs">
           <%= f.input :email, :label => false, placeholder: '邮箱', required: false, autofocus: true %>
        <%= f.input :password, :label => false, placeholder: '密码', required: false %>
        <%= f.input :remember_me, :label => "记住我", as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "忘记密码？", new_password_path(resource_name), class: "psw" %>
         </div>
         <div class="form-actions">
           <%= f.button :submit, "登录",class: "button" %>
         </div>
       <% end %>
       <hr />
      <div class="account">
        <%= link_to "没有帐号，立即注册", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <h2><span class="fa fa-user-circle-o"></span> 帐号注册</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, :label => false, placeholder: '请输入常用的邮箱地址', error: '请输入邮箱地址', required: true, autofocus: true %>
          <%= f.input :username, :label => false, placeholder: '请输入真实姓名', error: '请输入姓名', required: true %>
          <%= f.input :is_admin, :label => false, as: :radio_buttons, collection:  [['个人用户', false], ['企业用户', true]], required: true %>
          <%= f.input :password, :label => false, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 } %>
       <%= f.input :password_confirmation, :label => false, placeholder: '确认密码', error: '请输入相同的密码', required: true, input_html: { maxlength: 16 } %>
        </div>
        <div class="form-actions">
            <%= f.button :submit, "注册",class: "button" %>
        </div>
      <% end %>
      <hr />
      <div class="account">
        <%= link_to "已有帐号，立即登录", new_session_path(resource_name) %><br />
      </div>
    </div>
  </div>
</div>
<!-- ===登录弹窗结束=== -->
