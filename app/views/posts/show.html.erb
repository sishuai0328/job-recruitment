<div class="post-container">
  <h1> <%= @post.title %> </h1>
  <span style="font-size:15px;color:gray;"><%= @post.created_at.strftime('%Y-%m-%d %H:%M:%S')%></span>
  <span style="font-size:15px;margin-left:15px">作者：</span><a style="font_size:13px"><%= @post.user.username %></a>
  <p>
    <div class="markdown">
      <%= markdown(@post.content) %>
    </div>
  </p>
  <p style="margin-top:50px">
  <span style="position: absolute;bottom: 20px;left: 48%;">
    <% if current_user && @post.find_vote(current_user) %>
      <%= link_to("", downvote_post_path(@post), method: :post, class: "fa fa-thumbs-up fa-3x", style: "color:red;") %>
     <% else %>
      <%= link_to("", upvote_post_path(@post), method: :post, class: "fa fa-thumbs-up fa-3x", style: "color:grey;") %>
    <% end %>
    <% if @post.voters.length > 0 %>
    <a style="color:grey;font-size:15px"><%= @post.voters.count %></a>
    <% end %>
  </span>
  </p>
</div>

<section class="section comments">
    <div class="container">
      <% if @post.comments.length > 0 %>
        <h2 class="subtitle is-5" style="text-align:center;border-color:white"><strong><%= @post.comments.count %></strong> 条留言</h2>
      <% else %>
        <h2 class="subtitle is-5" style="text-align:center;border-color:white"><strong>暂无留言，赶快发布第一个留言吧</strong></h2>
      <% end %>
        <%= render @post.comments %>
        <div class="comment-form">
          <br>

            <%= render 'comments/from' %>
        </div>
    </div>
</section>
